# Backend API Configuration

# Server
PORT=3000
NODE_ENV=production

# Database
DATABASE_URL=postgresql://apkmanager:apkmanager@postgres:5432/apkmanager

# JWT
JWT_SECRET=change-this-to-a-random-secret-key-in-production
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=*

# APK Storage Paths
APK_DIRECTORY=/data/apk/staging
PLATFORM_DEV=/data/apk/development
PLATFORM_RC=/data/apk/release-candidate
PLATFORM_PROD=/data/apk/production

# Publication Check
CHECK_INTERVAL=60
