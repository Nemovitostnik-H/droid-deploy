# Backend API Configuration

# Server
PORT=3000
NODE_ENV=production

# Database
DATABASE_URL=postgresql://apkmanager:apkmanager@postgres:5432/apkmanager

# JWT
JWT_SECRET=change-this-to-a-random-secret-key-in-production
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=*

# APK Storage Paths
APK_DIRECTORY=/files/docker/apk-manager/staging
PLATFORM_DEV=/files/docker/apk-manager/development
PLATFORM_RC=/files/docker/apk-manager/release-candidate
PLATFORM_PROD=/files/docker/apk-manager/production

# Publication Check
CHECK_INTERVAL=60
